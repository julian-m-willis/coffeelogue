# Environment Variables for myCoffee Journal Backend

# FastAPI Configuration
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./mycoffee_journal.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/mycoffee_journal

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# CrewAI Configuration
CREWAI_API_KEY=your_crewai_api_key_here

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Audio Processing
MAX_VOICE_FILE_SIZE=10485760  # 10MB in bytes
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,ogg

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mycoffee_journal.log
